<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto mt-5">
    <% if current_user %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"> Hi, <%= current_user.username%></h5>
          <p class="card-text">Welcome to Book Explorer, <%= current_user.username%>. What would you like to do?</p>
          <a href="<%= uploads_new_path %>" class="btn btn-primary">Upload New File</a>
          <a href="<%= uploads_path %>" class="btn btn-primary mt-2">View Previous Uploads</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
